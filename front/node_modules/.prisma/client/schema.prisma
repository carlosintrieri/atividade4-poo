// schema.prisma

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model ClienteMenorConsumo {
  id             Int     @id @default(autoincrement())
  nome           String
  cpf            String  @unique
  telefone       String?
  valorConsumido Float   @default(0)

  @@map("clientes_menor_consumo")
}

model ClienteQtd {
  id           Int     @id @default(autoincrement())
  nome         String
  cpf          String  @unique
  telefone     String?
  qtdConsumida Int     @default(0)

  @@map("clientes_qtd")
}

model ClienteValor {
  id             Int    @id @default(autoincrement())
  nome           String
  cpf            String @unique
  telefone       String
  valorConsumido Float  @default(0)

  @@map("clientes_valor")
}

model ConsumoGenero {
  id                 Int    @id @default(autoincrement())
  clienteNome        String
  produtoServicoNome String
  valorTotal         Float
  genero             Genero

  @@map("consumo_genero")
}

model ProdutoServicoConsumo {
  id    Int    @id @default(autoincrement())
  nome  String @unique
  valor Float

  @@map("produtos_servicos_consumo")
}

enum Genero {
  MASCULINO
  FEMININO
}
